@page "/criteria"

@inherits EsgCriteriaBase

<h1>Criteria</h1>

@if (criteria == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>EsgCriteriaId</th>
                <th>CriteriaName</th>
                <th>CategoryName</th>
                <th>WeightAsPercentageOfTotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var criteria in criteria)
            {
                <tr>
                    <td>@criteria.EsgCriteriaId</td>
                    <td>@criteria.CriteriaName</td>
                    <td>@criteria.CategoryName</td>
                    <td>@criteria.WeightAsPercentageOfTotal</td>
                </tr>
            }
        </tbody>
    </table>
}