@page "/addinstitution"

@inherits InstitutionsAddBase

<h2>Create Institution</h2>
<p>
    <a href="/">Back</a>
</p>

<hr />

@if (institutionDto == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <form>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label for="Name" class="control-label">Name</label>
                    <input for="Name" class="form-control" @bind="@institutionDto.InstitutionName" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input type="button" class="btn btn-primary" @onclick="@CreateInstitution" value="Save" />
                    <input type="button" class="btn" @onclick="@Cancel" value="Cancel" />
                </div>
            </div>
        </div>
    </form>
}